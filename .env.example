# Anthropic API Key for Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Mastra Agent API URL
# For local development: http://localhost:4111
# For production: https://your-mastra-deployment.com
MASTRA_API_URL=http://localhost:4111

# Example Database Connection Strings
# PostgreSQL
POSTGRES_CONNECTION_STRING=postgresql://username:password@localhost:5432/database_name

# MySQL
MYSQL_CONNECTION_STRING=mysql://username:password@localhost:3306/database_name

# MongoDB for storing metrics
MONGODB_CONNECTION_STRING=mongodb://localhost:27017/posc_metrics

# Note: In production, these credentials should be securely managed
# and passed to the agent at runtime, not stored in environment variables